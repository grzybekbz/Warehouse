@model ActivityDetailsViewModel

@{

    ViewData["Title"] = "Szczególy";

}

<div class="text-left ml-3 mt-5">

    <p>
       @if (Model.Activity.Type == "Admission") {
            <text>Przyjęcie na magazyn</text>
        } else if (Model.Activity.Type == "Shipment") {
            <text>Wydanie z magazynu</text>
        }
    </p>
    <p>
        Data: @Model.Activity.Date
    </p>
    <p>
        @if (Model.Activity.Type == "Admission") {
            <text>Skąd</text>
        } else if (Model.Activity.Type == "Shipment") {
            <text>Dokąd</text>
        }
        : @Model.Activity.Where
    </p>
    <p>
        Opis: @Model.Activity.Description
    </p>
    <br />
    <p>
        Lista produktów
    </p>
</div>
<table class="table table-dark table-bordered table-sm w-100">
    <tr>
        <th class="text-left">Nazwa</th>
        <th class="text-left">Ilość</th>
    </tr>
    @foreach (var prod in Model.Products) {
        <tr>
            <td>
                @prod.Product
            </td>
            <td>
                @prod.Quantity
            </td>
        </tr>
    }
</table>
